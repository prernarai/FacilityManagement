<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.facilitymanagement.web.screens.facility">
    <data>
        <instance id="facilityDc"
                  class="com.company.facilitymanagement.entity.FacilityManagement.Facility"
                  view="facility-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="facilityDc">
            <column width="250px">
                <textField id="nameField" property="name"/>
                <textField id="addressLine1Field" property="addressLine1"/>
                <textField id="addressLine2Field" property="addressLine2"/>
                <textField id="cityField" property="city"/>
                <pickerField id="stateField" property="state">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="zipField" property="zip"/>
                <textField id="businessKeyField" caption="Facility Number" property="businessKey"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
